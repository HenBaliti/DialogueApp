<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <TextView
            style="@style/headerText"
            android:text="Account Info"
            android:layout_marginBottom="20dp"/>

        <RelativeLayout style="@style/profileDetailsLayout">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/edit_image_profile_student"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="350px"
                android:src="@drawable/ic_baseline_person_24" />

        </RelativeLayout>


        <RelativeLayout style="@style/profileDetailsLayout">
            <ImageView
                android:id="@+id/nameImageView"
                android:src="@drawable/usericon"
                style="@style/profileDetailsImage" />

            <TextView
                android:id="@+id/usernameTextView"
                style="@style/profileDetailsTextMain"
                android:layout_toRightOf="@id/nameImageView"
                android:text="Username" />

            <EditText
                android:id="@+id/Edit_username_student"
                style="@style/profileDetailsMiniText"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/nameImageView"
                android:text="developer" />


        </RelativeLayout>

        <View style="@style/proifleDetailsView" />
        <RelativeLayout style="@style/profileDetailsLayout">
            <ImageView
                android:id="@+id/mobileImageView"
                android:src="@drawable/nameicon"
                style="@style/profileDetailsImage" />

            <TextView
                style="@style/profileDetailsTextMain"
                android:layout_toRightOf="@id/mobileImageView"
                android:text="Name" />

            <EditText
                android:id="@+id/edit_fullname_student"
                style="@style/profileDetailsMiniText"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/mobileImageView"
                android:text="Amit" />

        </RelativeLayout>

        <View style="@style/proifleDetailsView" />

        <View style="@style/proifleDetailsView" />

        <RelativeLayout style="@style/profileDetailsLayout">


            <Button
                android:id="@+id/save_changes_student"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="300px"
                android:layout_marginTop="150px"
                android:text="Save Changes" />
        </RelativeLayout>
        <RelativeLayout style="@style/profileDetailsLayout">


            <Button
                android:id="@+id/back_profile_student"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="220px"
                android:text="Back to Profile page"
                app:backgroundTint="#03A9F4" />
        </RelativeLayout>

        <View style="@style/proifleDetailsView" />

        <View style="@style/proifleDetailsView" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>