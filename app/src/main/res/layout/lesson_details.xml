<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <TextView
            android:id="@+id/txt_title_lesson_details"
            style="@style/headerText"
            android:layout_marginBottom="20dp"
            android:text="Title" />

        <RelativeLayout style="@style/profileDetailsLayout">
            <ImageView
                android:id="@+id/nameImageView"
                android:src="@drawable/usericon"
                style="@style/profileDetailsImage" />

            <TextView
                android:id="@+id/isDone_txt"
                style="@style/profileDetailsTextMain"
                android:layout_toRightOf="@id/nameImageView"
                android:text="Completed?" />

            <TextView
                android:id="@+id/txt_isDone_Details"
                style="@style/profileDetailsMiniText"
                android:layout_toRightOf="@id/nameImageView"
                android:text="developer" />

        </RelativeLayout>

        <RelativeLayout style="@style/profileDetailsLayout">

            <ImageView
                android:id="@+id/schedule_date_icon"
                style="@style/profileDetailsImage"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_baseline_calendar_today_24" />

            <TextView
                style="@style/profileDetailsTextMain"
                android:layout_toRightOf="@id/schedule_date_icon"
                android:text="Schedule Date" />

            <TextView
                android:id="@+id/txt_schedule_date_details"
                style="@style/profileDetailsMiniText"
                android:layout_toRightOf="@id/schedule_date_icon"
                android:text="14.2.96" />

        </RelativeLayout>

        <RelativeLayout style="@style/profileDetailsLayout">

            <ImageView
                android:id="@+id/schedule_time_icon"
                style="@style/profileDetailsImage"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_baseline_watch_later_24" />

            <TextView
                style="@style/profileDetailsTextMain"
                android:layout_toRightOf="@id/schedule_time_icon"
                android:text="Schedule Time" />

            <TextView
                android:id="@+id/txt_schedule_time_details"
                style="@style/profileDetailsMiniText"
                android:layout_toRightOf="@id/schedule_time_icon"
                android:text="14.2.96" />

        </RelativeLayout>


        <RelativeLayout style="@style/profileDetailsLayout">

            <ImageView
                android:id="@+id/length_time_icon"
                style="@style/profileDetailsImage"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:src="@drawable/clockicon" />

            <TextView
                style="@style/profileDetailsTextMain"
                android:layout_toRightOf="@id/length_time_icon"
                android:text="Lesson Length" />

            <TextView
                android:id="@+id/txt_length_time_details"
                style="@style/profileDetailsMiniText"
                android:layout_toRightOf="@id/length_time_icon"
                android:text="45" />
            <TextView
                style="@style/profileDetailsMiniText"
                android:layout_toRightOf="@id/txt_length_time_details"
                android:text="Minutes" />

        </RelativeLayout>


        <RelativeLayout style="@style/profileDetailsLayout">

            <ImageView
                android:id="@+id/zoom_icon"
                style="@style/profileDetailsImage"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:src="@drawable/z" />



            <TextView
                android:id="@+id/txt_zoom"
                style="@style/profileDetailsMiniText"
                android:layout_toRightOf="@id/zoom_icon"
                android:text="https://zoom.us/j/98075310650?pwd=M2wrdmJFSEFTZmlPQzVQOWFKSG1sdz09#success" />


        </RelativeLayout>

        <View
            style="@style/proifleDetailsView"
            android:layout_height="30dp" />




        <RelativeLayout style="@style/profileDetailsLayout">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/profileDetailsTextMain"
                        android:text="Teacher"
                        android:textColor="@color/primaryTextColor"/>

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imageTeacherDetails"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/ic_baseline_person_24" />

                    <TextView
                        android:id="@+id/teacherName"
                        style="@style/profileDetailsTextMain"
                        android:text="Teacher" />


                </LinearLayout>

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/dialog" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/profileDetailsTextMain"
                        android:text="Student"
                        android:textColor="@color/primaryTextColor"/>


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imageStudentDetails"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/ic_baseline_person_24" />
                    <TextView
                        android:id="@+id/studentName"
                        style="@style/profileDetailsTextMain"
                        android:text="Student" />

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>