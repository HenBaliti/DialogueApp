<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment_set_lesson_teacher">


    <ImageButton
        android:id="@+id/btn_logout_schedule_teacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_logout_24"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_schedule_title_teacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Create A New Lesson:"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txt_picked_date_teacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="65dp"
        android:layout_marginTop="16dp"
        android:width="200dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/txt_date_teacher"
        app:layout_constraintTop_toBottomOf="@+id/text_schedule_title_teacher" />

    <ImageButton
        android:id="@+id/btn_schedule_picker_teacher"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/ic_calendar"
        android:src="@drawable/ic_baseline_calendar_today_24"
        app:layout_constraintStart_toEndOf="@+id/txt_picked_date_teacher"
        app:layout_constraintTop_toBottomOf="@+id/text_schedule_title_teacher" />

    <ImageButton
        android:id="@+id/btn_time_picker_teacher"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/ic_history"
        android:src="@drawable/ic_baseline_watch_later_24"
        app:layout_constraintStart_toEndOf="@+id/txt_picked_time_teacher"
        app:layout_constraintTop_toBottomOf="@+id/btn_schedule_picker_teacher" />

    <EditText
        android:id="@+id/txt_picked_time_teacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:width="200dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toEndOf="@+id/txt_time_teacher"
        app:layout_constraintTop_toBottomOf="@+id/txt_picked_date_teacher" />

    <EditText
        android:id="@+id/txt_picked_title_teacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:width="200dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toEndOf="@+id/txt_time_teacher"
        app:layout_constraintTop_toBottomOf="@+id/btn_30" />

    <Button
        android:id="@+id/btn_create_lesson_teacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Create New Lesson"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_picked_title_teacher" />

    <TextView
        android:id="@+id/txt_date_teacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:text="Date:"
        android:textSize="18dp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_schedule_title_teacher" />

    <TextView
        android:id="@+id/txt_time_teacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="Time From:"
        android:textSize="18dp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_date_teacher" />

    <TextView
        android:id="@+id/txt_title_teacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:text="Title:"
        android:textSize="18dp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_15" />

    <Button
        android:id="@+id/btn_15"
        android:layout_width="58dp"
        android:layout_height="48dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="20dp"
        android:text="15"
        app:backgroundTint="#747277"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_picked_time_teacher"
        app:strokeColor="@color/colorBlack"
        app:strokeWidth="2dp" />

    <Button
        android:id="@+id/btn_30"
        android:layout_width="58dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:text="30"
        app:backgroundTint="#747277"
        app:layout_constraintEnd_toStartOf="@+id/btn_45"
        app:layout_constraintStart_toEndOf="@+id/btn_15"
        app:layout_constraintTop_toBottomOf="@+id/txt_picked_time_teacher"
        app:strokeColor="@color/colorBlack"
        app:strokeWidth="2dp" />

    <Button
        android:id="@+id/btn_45"
        android:layout_width="58dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="100dp"
        android:text="45"
        app:backgroundTint="#747277"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_picked_time_teacher"
        app:strokeColor="@color/colorBlack"
        app:strokeWidth="2dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="31dp"
        android:layout_height="34dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/clockicon"
        app:layout_constraintEnd_toStartOf="@+id/btn_15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_time_teacher" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Minutes"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toStartOf="@+id/btn_15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />
</androidx.constraintlayout.widget.ConstraintLayout>